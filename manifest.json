{
  "name": "Omnibox Translate",
  "description" : "Translate text instantly onto your clipboard.",
  "version": "0.1",
  "background": {
    "scripts": ["background.js", "jquery-1.10.2.min.js"]
  },
  "icons": { "16": "logo16.png",
             "48": "logo48.png",
             "128": "logo128.png" },
  "permissions": ["tabs", "clipboardWrite", "notifications",
                 "contextMenus"],
  "omnibox": { "keyword" : "t" },
  "commands": {
    "toggle-OmniboxTranslate": {
      "suggested_key": {
        "default": "Alt+R",
        "mac": "Ctrl+R"
      },
      "description": "Toggle OmniboxTranslate"
    }
  },
  "manifest_version": 2
}